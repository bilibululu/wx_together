/* pages/mine/mine.wxss */
page {
  background-color: #efefef;
}

.scr {
  background-color: #efefef;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.btnapply {
  font-size: 35rpx;
  margin-right: 15rpx;
  color: white;
  background-color: #5cbcaf;
  border-radius: 98rpx;
  padding: 2rpx 40rpx;
  margin-block-end: 15rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.alpply {
  font-size: 35rpx;
  margin-right: 15rpx;
  color: #5cbcaf;
  background-color: #dbd8d8;
  border-radius: 98rpx;
  padding: 2rpx 40rpx;
  margin-block-end: 15rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.block {
  margin: 15rpx;
  display: flex;
  align-items: flex-end;
  flex-direction: row;
  justify-content: space-between;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.al_apply {
  font-size: 30rpx;
  color: #5cbcaf;
  height: 32rpx;
  margin-left: 15rpx;
  margin-block-end: 15rpx;
  display: flex;
  align-items: flex-end;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 5rpx;
}

.swiper-home {
  height: 30vh;
  width: 100%;
}

.block-box {
  height: 30vh;
  width: 100%;
}

.repair-img {
  width: 100vw;
  height: 30vh;
}

.nav {
  background: white;
  z-index: 99;
  box-shadow: 0rpx -1.2rpx 10rpx 4rpx #dddddd99; /*for Android*/
  -webkit-box-shadow: 0px -0.6px 5px 2px #dddddd99;
}

.positionFixed {
  position: fixed;
  left: 0;
  top: 0;
  box-shadow: 0rpx -1.2rpx 10rpx 4rpx #dddddd99; /*for Android*/
  -webkit-box-shadow: 0px -0.6px 5px 2px #dddddd99;
}

/* 这个属性特别重要！！不然样式会崩掉 */

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.one-tab {
  width: 50vw;
  float: left;
  text-align: center;
  padding: 10rpx 0;
  height: 6vh;
  line-height: 4.6vh;
}

.tab-title-select {
  color: lightcoral;
  font-size: 32rpx;
}

.tab-title {
  font-size: 32rpx;
}

.one-tab-line {
  width: 10vw;
  border-bottom: 6rpx solid lightcoral;
  margin-left: 8vw;
  margin-top: 1vh;
  margin-bottom: 0.2vh;
}

.center-tab {
