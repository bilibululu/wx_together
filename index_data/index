create database together;
use together;
create table verified
(
vsn int(10) not null primary key
vname varchar(10) not null,
vopenid varchar(20) not null,
vwxoqq varchar(20) not null,
vbool int not null
);
create table post
(
message_id int,
pvsn int(10),
pname varchar(10) not null,
popenid varchar(100) not null,
pnickname varchar(20) not null,
pheadport varchar(100) not null,
parea int not null,
ptext text not null,
ptime int(11),
total_request int(3) not null,
pstate int(1) not null,
primary key(message_id,pvsn)
);
create table request
(
rid INT(100) PRIMARY KEY,
rmessageid INT(100) NOT NULL,
ropenid VARCHAR(100) NOT NULL,
ifaccept INT(1) NOT NULL
);

